<!DOCTYPE html>
  <html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/styleside.css">
    <script src="https://kit.fontawesome.com/cc4dc7c7cc.js" crossorigin="anonymous"></script>

    <title>List Car</title>
  </head>
<body>
  <div class="main-container d-flex">
    <div class="sidebar1" id="side_nav">
      <div class="header-box px-2 pt-3 pb-4">
          <div class="d-flex justify-content-center images-logo">
            <img src="/images/logo.png" class="img-fluid" alt="Logo">
          </div>
          <button class="btn d-md-none d-block close-btn px-1 py-0 text-white mt-3 mb-3">
              <i class="d-flex justify-content-center fa-solid fa-backward icon-back"></i>
          </button>
      </div>
      <div class="d-flex justify-content-center sidebar-menu">
        <ul>
            <li class="mb-2">
              <a href="#" class="text-decoration-none d-block"><i class="d-flex justify-content-center fa-solid fa-house"></i><p class="d-flex justify-content-center mt-1">Dashboard</p></a>
            </li>
            <li class="">
              <a href="#" class="text-decoration-none d-block"><i class="d-flex justify-content-center fa-solid fa-car"></i><p class="d-flex justify-content-center mt-1">Cars</p></a>
            </li>
        </ul>
      </div>
    </div>
    <div class="sidebar2" id="side_nav">
      <div class="header-box px-2 pt-3 pb-4">
          <div class="d-flex justify-content-center images-logo">
            <img src="/images/logo2.png" class="img-fluid" alt="Logo">
          </div>
      </div>
      <div class="d-flex justify-content-center sidebar-menu mt-4">
        <ul>
            <li class="d-flex justify-content-center mb-2 text-sidebar1">
              <a href="#" class="text-decoration-none d-block"><p class="mt-1">CARS</p></a>
            </li>
            <li class="d-flex justify-content-center text-sidebar2 px-4">
              <a href="#" class="text-decoration-none d-block"><p class="mt-1">List Cars</p></a>
            </li>
        </ul>
      </div>
    </div>
    <div class="content">
      <nav class="navbar navbar-expand-lg navbar-light bg-white">
          <div class="container-fluid">
            <div class="d-flex justify-content-between d-md-none d-block">
              <a class="navbar-brand fs-4" href="#">Navbar</a>
              <button class="btn px-1 py-0 open-btn"><i class="fa-solid fa-bars"></i></button>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="#"><i class="d-none d-sm-block fa-solid fa-bars"></i></a>
                </li>
              </ul>
              <form class="d-flex">
                <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-search" type="submit">Search</button>
              </form>
              <div class="user d-flex flex-row">
                <div class="image ms-2">
                  <img src="/images/user.png" alt="User">
                </div>
                <span class="d-flex align-items-center ms-2">Unis Badri A</span>
                <i class="fa-solid fa-chevron-down d-flex align-items-center ms-2"></i>
              </div>
            </div>
          </div>
      </nav>

      <section class="container mt-3 bg-light list-car ">
        <div class="text-list-car">
          <div class="row">
            <p>Cars > List Car</p>
          </div>
          <div class="row">
            <div class="col-md-10 me-4">
              <h4>List Car</h4>
            </div>
            <div class="col-md-auto ms-3 create-car">
              <a href="/cars/create" class="btn btn-new-car">+ Add New Car</a>
            </div>
          </div>
        </div>
        <div class="filter-list-car">
          <ul class="list-group list-group-horizontal mt-3">
            <li class="btn btn-filter me-2"><a href="">All</a></li>
            <li class="btn btn-filter-2 me-2"><a href="">Small</a></li>
            <li class="btn btn-filter-2 me-2"><a href="">Medium</a></li>
            <li class="btn btn-filter-2 me-2"><a href="">Large</a></li>
          </ul>
        </div>

        <div class="card-list-car mt-4">
          <div class="row mb-3">
            <% Cars.forEach((cars) => { %>
            <div class="col-md-4">
              <div class="card card-car">
                <img src="/images/car.png" class="card-img-top" alt="Car">
                <div class="card-body">
                  <p class="card-text"><%= cars?.name %></p>
                  <h5 class="card-title">Rp <%= cars?.price %> / hari</h5>
                  <i class="fa-regular fa-clock"></i><span class="card-text"> Updated at 4 Apr 2022, 09.00</span>
                  <a href="/cars/<%= cars.id %>/delete" class="btn btn-delete-car-icon mt-2 "><i class="fa-solid fa-trash"></i> Delete</a>
                  <a href="/cars/<%= cars.id %>/update" class="btn btn-edit-car-icon mt-2 "><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                </div>
              </div>
            </div>
            <% }) %>
      </section>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script>
    $('.sidebar1 ul li').on('click', function(e) {
          e.preventDefault();
          $('.sidebar1 ul li.active').removeClass('active');
          $(this).addClass('active');

        });
        
        $('.open-btn').on('click', function() {
          $('.sidebar1').addClass('active');
        })

        $('.close-btn').on('click', function() {
          $('.sidebar1').removeClass('active');
        })
  </script>


</body>
</html>